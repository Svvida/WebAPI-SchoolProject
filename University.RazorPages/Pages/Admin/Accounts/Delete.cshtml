@page "{id:guid}"
@model University.RazorPages.Pages.Admin.Accounts.DeleteModel
@{
    ViewData["Title"] = "Delete Account";
}

<h1>Delete Account</h1>

<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.DeactivationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.DeactivationDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Account.Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="./Index">Cancel</a>
    </form>
</div>
