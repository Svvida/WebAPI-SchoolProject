@page "{id:guid}"
@model University.RazorPages.Pages.Admin.Accounts.EditModel
@{
    ViewData["Title"] = "Edit Account";
}

<h1>Edit Account</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Account.Email"></label>
        <input asp-for="Account.Email" class="form-control" />
        <span asp-validation-for="Account.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Account.Login"></label>
        <input asp-for="Account.Login" class="form-control" />
        <span asp-validation-for="Account.Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Account.Password"></label>
        <input asp-for="Account.Password" class="form-control" />
        <span asp-validation-for="Account.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Account.IsActive"></label>
        <input asp-for="Account.IsActive" class="form-control" />
        <span asp-validation-for="Account.IsActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

