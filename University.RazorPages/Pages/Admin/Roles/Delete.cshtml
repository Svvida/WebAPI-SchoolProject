@page "{id:guid}"
@model University.RazorPages.Pages.Admin.Roles.DeleteModel
@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<h3>Are you sure you want to delete this role?</h3>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Role.Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="./Index">Cancel</a>
    </form>
</div>
