@page
@model University.RazorPages.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "Role List";
}

<h1>Role List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@role.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@role.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create">Create New Role</a>
