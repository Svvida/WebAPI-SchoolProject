@page
@model University.RazorPages.Pages.Admin.Students.CreateModel
@{
    ViewData["Title"] = "Create Student";
}

<h1>Create Student</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Student.Name"></label>
        <input asp-for="Student.Name" class="form-control" />
        <span asp-validation-for="Student.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Surname"></label>
        <input asp-for="Student.Surname" class="form-control" />
        <span asp-validation-for="Student.Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.DateOfBirth"></label>
        <input asp-for="Student.DateOfBirth" class="form-control" />
        <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Pesel"></label>
        <input asp-for="Student.Pesel" class="form-control" />
        <span asp-validation-for="Student.Pesel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Gender"></label>
        <select asp-for="Student.Gender" class="form-control">
            <option value="0">Male</option>
            <option value="1">Female</option>
            <option value="2">Other</option>
        </select>
        <span asp-validation-for="Student.Gender" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

