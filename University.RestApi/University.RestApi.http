@host = http://localhost:5217
@token = {{token}}

### 1. Login to get JWT token
POST {{host}}/api/auth/login
Content-Type: application/json

{
    "login": "admin",
    "password": "admin123"
}

> {%
    client.test("Request executed successfully", function() {
        var response = JSON.parse(responseBody);
        client.global.set("token", response.token);
    });
%}

###

### 2. Get all accounts
GET {{host}}/api/accounts
Authorization: Bearer {{token}}

###

### 3. Get account by ID
GET {{host}}/api/accounts/{id}
Authorization: Bearer {{token}}

###

### 4. Create a new account
POST {{host}}/api/accounts
Authorization: Bearer {{token}}
Content-Type: application/json

{
    "email": "new.user@wsei.pl",
    "login": "newuser",
    "password": "newuser123",
    "isActive": true
}

###

### 5. Update an account
PUT {{host}}/api/accounts/{id}
Authorization: Bearer {{token}}
Content-Type: application/json

{
    "id": "{id}",
    "email": "updated.user@wsei.pl",
    "login": "updateduser",
    "isActive": true
}

###

### 6. Delete an account
DELETE {{host}}/api/accounts/{id}
Authorization: Bearer {{token}}

###

### 7. Get all students
GET {{host}}/api/students
Authorization: Bearer {{token}}

###

### 8. Get student by ID
GET {{host}}/api/students/{id}
Authorization: Bearer {{token}}

###

